<h3 class="c-centered c-text-shadow" style="font-weight:400;margin-top:0px;">Order Form</h3>
<div id="order-sheet">
	<div class="row-fluid">
		<div class="span12" style="margin:0px 0px 20px 0px;">

			<h4 class="c-centered" style="margin:0px 0px 10px 0px">Your Services</h4>

			<% services.forEach(function(service) { %>
	    		<p class="c-centered c-text-shadow c-green" style="font-size:17px;margin-bottom:3px;"><i class="icon-ok"></i> <%= service %></p>
			<% }); %>

		</div>
	</div>
	<div class="row-fluid">
		<form id="order-form" class="offset3 span6">
			<p class="c-centered c-blue c-text-shadow" style="margin-bottom:3px;">Your Name</p>
